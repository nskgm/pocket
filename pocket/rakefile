	DEP_LIST = FileList["**/*.d"]
	#abs = File.expand_path __FILE__
	#dir = File.dirname abs

	DEP_LIST.each do |path|
		import path
	end
	file(EXECUTE_FILE).invoke

=begin

	return []

	table = {}
	DEP_LIST.each do |fname|
		# ファイル全体取得
		all = File.read fname
		# 邪魔な文字を削除
		["\\", "\n"].each do |s| all.delete! s end
		# 空白で分割
		arg = all.split ' '

		# キー
		obj = arg[0].strip
		src = arg[1].strip
		obj.delete! ":"
		2.times do arg.shift end

		# 絶対パス
		table[obj] = {
			src => arg.map do |s| File.expand_path s.strip end
		}
	end

	table.each do |k, v|
		p k
		v.each do |s, a|
			print "\t#{s}\n"
			a.each do |e|
				print "#{"\t"*2}#{e}\n"
			end
		end
	end
